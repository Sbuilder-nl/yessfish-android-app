<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@android:color/white"
    android:minWidth="280dp">

    <!-- Title -->
    <TextView
        android:id="@+id/infoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#1e293b"
        android:layout_marginBottom="8dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/infoDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#475569"
        android:layout_marginBottom="8dp"
        android:maxLines="3"
        android:ellipsize="end" />

    <!-- Details Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f1f5f9"
        android:padding="8dp"
        android:layout_marginBottom="8dp">

        <!-- Fish Species -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🐟 Vis:"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/infoFishSpecies"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#334155"
                android:gravity="end" />
        </LinearLayout>

        <!-- Water Type -->
        <LinearLayout
            android:id="@+id/waterTypeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="💧 Type:"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/infoWaterType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#334155"
                android:gravity="end" />
        </LinearLayout>

        <!-- Depth -->
        <LinearLayout
            android:id="@+id/depthRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📏 Diepte:"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/infoDepth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#334155"
                android:gravity="end" />
        </LinearLayout>

        <!-- Municipality -->
        <LinearLayout
            android:id="@+id/municipalityRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📍 Locatie:"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/infoMunicipality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textColor="#334155"
                android:gravity="end" />
        </LinearLayout>

        <!-- Crowd Level / Drukte -->
        <LinearLayout
            android:id="@+id/crowdRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:padding="6dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="👥 Drukte:"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/infoCrowdLevel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <!-- Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Rating -->
        <TextView
            android:id="@+id/infoRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#0ea5e9"
            android:textStyle="bold"
            android:layout_marginEnd="12dp" />

        <!-- Reviews -->
        <TextView
            android:id="@+id/infoReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#64748b"
            android:layout_marginEnd="12dp" />

        <!-- Catches -->
        <TextView
            android:id="@+id/infoCatches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#64748b" />
    </LinearLayout>

</LinearLayout>
